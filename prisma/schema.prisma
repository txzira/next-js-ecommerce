// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String
  lastName  String
  role      String
  password  String   @db.Char(60)
  verified  Boolean
  Orders    Orders[]
}

model Product {
  id       Int     @id @default(autoincrement())
  name     String
  price    Decimal
  image    Image   @relation(fields: [imageId], references: [assetId])
  imageId  String
  Orders   Orders? @relation(fields: [ordersId], references: [id])
  ordersId Int?
  @@index([imageId])
  @@index([ordersId])
}

model Image {
  assetId  String    @id
  publicId String
  url      String
  Product  Product[]
}

model Orders {
  id         Int       @id @default(autoincrement())
  products   Product[]
  amount     Decimal
  date       String
  customerId Int
  customer   User      @relation(fields: [customerId], references: [id])
  @@index([customerId])
}
